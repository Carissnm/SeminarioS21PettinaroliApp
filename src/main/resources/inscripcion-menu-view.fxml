<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.InscripcionFormController"
            prefWidth="900" prefHeight="560">

    <top>
        <HBox style="-fx-padding: 14 18; -fx-background-color: #f5f5f5;">
            <Label text="Inscripciones" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="12" vgap="10" style="-fx-padding: 18;">
            <columnConstraints>
                <ColumnConstraints minWidth="170"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- SOCIO -->
            <Label text="Socio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <!-- Enter también dispara la búsqueda -->
                <TextField fx:id="txtSocioDni" promptText="DNI" onAction="#onBuscarSocioPorDni"/>
                <Button text="Buscar" onAction="#onBuscarSocioPorDni"/>
            </HBox>

            <!-- INFO DEL SOCIO: DEBAJO DEL BUSCADOR -->
            <Label fx:id="lblSocioSel"
                   text="—"
                   style="-fx-text-fill: #14854F;"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- ACTIVIDAD -->
            <Label text="Actividad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbActividad"
                      onAction="#onActividadChange"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- FECHA ALTA -->
            <Label text="Fecha alta:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpFechaAlta" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- PRECIO ALTA (solo lectura) -->
            <Label text="Precio alta:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrecioAlta" editable="false"
                       promptText="ej: 12000.00"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding: 12 18;">
            <Button fx:id="btnGuardar" text="Inscribir"  onAction="#onGuardarInscripcion"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
            <Button text="Volver"   onAction="#onVolver"/>
        </HBox>
    </bottom>
</BorderPane>
