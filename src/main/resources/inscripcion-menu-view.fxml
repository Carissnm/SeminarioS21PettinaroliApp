<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.InscripcionFormController"
            prefWidth="900" prefHeight="560">
    <top>
        <HBox style="-fx-padding: 14 18; -fx-background-color: #f5f5f5;">
            <Label text="Inscripciones" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="12" vgap="10" style="-fx-padding: 18;">
            <columnConstraints>
                <ColumnConstraints minWidth="170"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Socio -->
            <Label text="Socio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <TextField fx:id="txtSocioDni" onAction="#onBuscarSocioPorDni" promptText="DNI del socio" HBox.hgrow="ALWAYS"/>
                <Button text="Buscar" onAction="#onBuscarSocioPorDni"/>
                <Label fx:id="lblSocioSel"
                       style="-fx-text-fill: #2e7d32; -fx-font-style: italic;"/>
            </HBox>

            <!-- Actividad -->
            <Label text="Actividad:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <!--id cambiado a cbActividad y handler agregado -->
            <ComboBox fx:id="cbActividad" onAction="#onActividadChange"
                      GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="320"/>

            <!-- Fecha -->
            <Label text="Fecha alta:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpFechaAlta" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Precio (solo lectura; viene de actividad.precio_default) -->
            <Label text="Precio alta:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrecioAlta" editable="false"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"
                       promptText="ej: 12000.00"/>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding: 12 18;">
            <Button text="Guardar"  onAction="#onGuardarInscripcion"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
            <Button text="Volver"     onAction="#onVolver"/>
        </HBox>
    </bottom>
</BorderPane>
