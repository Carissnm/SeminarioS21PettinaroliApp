<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.ActividadFormController"
          hgap="10" vgap="10">
    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

    <columnConstraints>
        <ColumnConstraints minWidth="100" halignment="RIGHT"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="DescripciÃ³n:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Precio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="txtPrecio" promptText="Ej: 4500,00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cbEstado" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER_RIGHT">
        <Button text="Guardar" onAction="#onGuardar" defaultButton="true"/>
        <Button text="Cancelar" onAction="#onCancelar" cancelButton="true"/>
    </HBox>
