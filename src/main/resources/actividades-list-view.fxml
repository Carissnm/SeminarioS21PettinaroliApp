<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?xml version="1.0" encoding="UTF-8"?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.ActividadesListController"
            prefWidth="1000" prefHeight="620">
    <top>
        <VBox>
            <HBox style="-fx-padding: 14 18; -fx-background-color: #f5f5f5;">
                <Label text="Actividades" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            </HBox>
            <HBox spacing="8" style="-fx-padding:10 18;">
                <TextField fx:id="txtFiltro" promptText="Buscar por nombre o categorÃ­a" HBox.hgrow="ALWAYS"/>
                <Button text="Buscar" onAction="#buscar"/>
                <Button text="Nueva actividad" onAction="#nuevaActividad"/>
                <Button text="Volver" onAction="#volver"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblActividades">
            <columns>
                <TableColumn fx:id="colId"       text="ID"        prefWidth="70"/>
                <TableColumn fx:id="colNombre"   text="Nombre"    prefWidth="240"/>
                <TableColumn fx:id="colPrecio"   text="Cuota ($)" prefWidth="120"/>
                <TableColumn fx:id="colEstado"   text="Estado"    prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding:10 18;">
            <Button text="Ver detalle" onAction="#verDetalle"/>
            <Button text="Editar" onAction="#editarSeleccionada"/>
        </HBox>
    </bottom>
</BorderPane>
