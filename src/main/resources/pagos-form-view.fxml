<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.PagoFormController"
            prefWidth="900" prefHeight="560">

    <top>
        <HBox style="-fx-padding: 14 18; -fx-background-color: #f5f5f5;">
            <Label text="Pagos" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="12" vgap="10" style="-fx-padding: 18;">
            <columnConstraints>
                <ColumnConstraints minWidth="170"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Socio -->
            <Label text="Socio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <TextField fx:id="txtDni" onAction="#onBuscarSocio" promptText="DNI del socio" HBox.hgrow="ALWAYS"/>
                <Button text="Buscar" onAction="#onBuscarSocio"/>
                <Label fx:id="lblSocio" style="-fx-text-fill: #2e7d32; -fx-font-style: italic;"/>
            </HBox>

            <!-- Saldo -->
            <Label text="Saldo actual:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lblSaldo" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>


            <fx:define>
                <ToggleGroup fx:id="tgTipo"/>
            </fx:define>

            <!-- Actividad -->
            <Label text="Actividad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbActividad" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="320"/>

            <!-- Deuda de la actividad -->
            <Label text="Deuda de la actividad:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="lblDeudaAct" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>

            <!--  Deuda de cuota del club -->
            <Label text="Deuda cuota del club:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="lblDeudaClub" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>

            <!-- Tipo de pago -->
            <Label text="Tipo de pago:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <HBox spacing="12" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <RadioButton text="Cuota del club" fx:id="rbClub" toggleGroup="$tgTipo"/>
                <RadioButton text="Actividad" fx:id="rbActividad" toggleGroup="$tgTipo"/>
            </HBox>
            <!-- Importe -->
            <Label text="Importe:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="txtImporte" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <!-- Descripción -->
            <Label text="Descripción:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDescripcion" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding: 12 18;">
            <Button text="Registrar pago" onAction="#onGuardar"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
            <Button text="Volver" onAction="#onVolver"/>
        </HBox>
    </bottom>
</BorderPane>
