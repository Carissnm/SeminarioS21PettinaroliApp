<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.SocioDetalleController"
            prefWidth="900" prefHeight="560">
    <top>
        <HBox style="-fx-padding: 14 18; -fx-background-color: #f5f5f5;">
            <Label text="Socios" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="12" vgap="10" style="-fx-padding: 18;">
            <columnConstraints>
                <ColumnConstraints minWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="ID:"                GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtId"         GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

            <Label text="Apellido:"          GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtApellido"   GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

            <Label text="Nombre:"            GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombre"     GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false"/>

            <Label text="Documento:"         GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDocumento"  GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>

            <Label text="Estado:"            GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEstado"     GridPane.rowIndex="4" GridPane.columnIndex="1" editable="false"/>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding: 12 18;">
            <Button text="Editar"                onAction="#editar"/>
            <Button text="Inscribir en actividad" onAction="#inscribir"/>
            <Button text="Ver inscripciones"     onAction="#verInscripciones"/>
            <Button text="Registrar pago"        onAction="#registrarPago"/>
            <Button text="Volver"                onAction="#volver"/>
        </HBox>
    </bottom>
</BorderPane>
