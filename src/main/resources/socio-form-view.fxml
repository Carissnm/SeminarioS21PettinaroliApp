<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ar.edu.csp.sistemadegestioncspgui.ui.SocioFormController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <!-- Columnas: etiqueta fija, campo expansible -->
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" minWidth="100" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <Label text="DNI:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtDni" promptText="Solo números"
               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Apellido:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtApellido" promptText="Apellido"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Nombre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="txtNombre" promptText="Nombre"
               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="txtEmail" promptText="usuario@dominio.com"
               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Teléfono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="txtTelefono" promptText="Celular o fijo"
               GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Domicilio:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="txtDomicilio" promptText="Calle, número, localidad"
               GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Fecha Nac.:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dpFechaNac"
                GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Fecha Baja:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dpFechaBaja"
                GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Activo:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <CheckBox fx:id="chkActivo"
              GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <HBox spacing="8" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardar" defaultButton="true"/>
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar" cancelButton="true"/>
    </HBox>
</GridPane>
